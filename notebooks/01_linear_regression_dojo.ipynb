import numpy as np

def add_bias(X):
    return np.c_[np.ones((X.shape[0], 1)), X]

def mse(y, yhat):
    return np.mean((y - yhat)**2)

def fit_ols_closed_form(X, y):
    # beta = (X'X)^(-1) X'y
    XtX = X.T @ X
    Xty = X.T @ y
    beta = np.linalg.solve(XtX, Xty)
    return beta

def fit_ridge_closed_form(X, y, alpha=1.0):
    # beta = (X'X + alpha*I)^(-1) X'y
    n_features = X.shape[1]
    I = np.eye(n_features)
    XtX = X.T @ X
    Xty = X.T @ y
    beta = np.linalg.solve(XtX + alpha * I, Xty)
    return beta

# --- synthetic data ---
rng = np.random.default_rng(42)
n, p = 500, 5
X = rng.normal(size=(n, p))
true_beta = rng.normal(size=(p,))
y = X @ true_beta + rng.normal(scale=0.5, size=n)

Xb = add_bias(X)              # add intercept
beta_ols = fit_ols_closed_form(Xb, y)
beta_ridge = fit_ridge_closed_form(Xb, y, alpha=10.0)

yhat_ols = Xb @ beta_ols
yhat_ridge = Xb @ beta_ridge

print("MSE OLS:", mse(y, yhat_ols))
print("MSE Ridge:", mse(y, yhat_ridge))

